{
  "private": true,
  "author": "18F",
  "license": "CC0-1.0",
  "scripts": {
    "postinstall": "bundle",
    "start": "bundle exec jekyll serve",
    "update-uswds": "npm run update-assets && npm run update-sass && npm run update-settings",
    "update-assets": "rsync -avr --delete node_modules/uswds/dist/ assets/uswds/ --exclude=/*.md --exclude=/*.zip --exclude=/css --exclude=/scss",
    "update-sass": "rsync -avr --delete node_modules/uswds/src/stylesheets/ _sass/uswds/src/",
    "update-settings": "rsync -avr --delete node_modules/uswds/src/stylesheets/theme/ _sass/theme/ --exclude=_uswds-theme-custom-styles.scss"
  },
  "dependencies": {
    "uswds": "github:uswds/uswds#develop"
  },
  "devDependencies": {
    "cached-path-relative": "^1.0.2"
  }
}
